<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/transient_go_icon"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:id="@+id/imageView"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnCancel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"/>

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCancel"

        android:id="@+id/btnSignIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSignIn">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tbxPassword"
            android:textSize="24sp"
            android:hint="Password"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tbxUsername"
            android:layout_marginBottom="46dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tbxUsername"
            android:textSize="24sp"
            android:hint="Username"
            android:layout_above="@+id/tbxPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"/>
    </RelativeLayout>

    <TextView
        android:text="Sign Up for Transient Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateUser"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textSize="18sp"
        android:textAlignment="center"/>


</RelativeLayout>